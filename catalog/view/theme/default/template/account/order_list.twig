<div class="content__inner">
  <div class="content__inner-box">
    <div class="content__body">
      {{ header }}

      <script src="catalog/view/javascript/jquery/jquery-3.5.1.min.js" type="text/javascript"></script>

      <link href="catalog/view/javascript/bootstrap/css/bootstrap.min.css" rel="stylesheet" media="screen" />
      <link href="catalog/view/javascript/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css" />
      <link href="catalog/view/theme/default/stylesheet/global.css" rel="stylesheet">
      <link href="catalog/view/theme/default/stylesheet/fonts.css" rel="stylesheet">
      <script src="catalog/view/javascript/common.js" type="text/javascript"></script>

      <div id="account-order" class="container">
        <ul class="breadcrumb breadcrumb__list">
          {% for key, breadcrumb in breadcrumbs %}
            {% if key + 1 < breadcrumbs|length %}
              <li class="breadcrumb__item breadcrumb__item-hover"><a class="breadcrumb__link" href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
            {% else %}
              <li class="breadcrumb__item">{{ text_breadcrumb_order }}</li>
            {% endif %}
          {% endfor %}
        </ul>
        <div class="row">{{ column_left }}
          {% if column_left and column_right %}
            {% set class = 'col-sm-6' %}
          {% elseif column_left or column_right %}
            {% set class = 'col-sm-9' %}
          {% else %}
            {% set class = 'col-sm-12' %}
          {% endif %}
          <div id="content" class="{{ class }}">
            <h2 class="account__title">{{ heading_title }}</h2>
            <section class="account">
              <div class="account__aside">
                <ul class="account__list">
                  <li class="account__item">
                    <a class="account__order-link" href="{{ order }}">
                      <svg xmlns="http://www.w3.org/2000/svg" class="account__order-link-icon">
                        <use xlink:href="/img/icon/sprite.svg#AccountOrderIcon"></use>
                      </svg>
                      {{ text_my_orders }}
                    </a>
                  </li>
                  <li class="account__item">
                    <a class="account__item-link" href="{{ address }}">
                      <svg xmlns="http://www.w3.org/2000/svg" class="account__icon account__address-icon">
                        <use xlink:href="/img/icon/sprite.svg#AccountAddressIcon"></use>
                      </svg>
                      {{ text_address }}
                    </a>
                  </li>
                  <li class="account__item">
                    <a class="account__item-link" href="{{ edit }}">
                      <svg xmlns="http://www.w3.org/2000/svg" class="account__icon account__profil-icon">
                        <use xlink:href="/img/icon/sprite.svg#AccountProfilIcon"></use>
                      </svg>
                      {{ text_edit }}
                    </a>
                  </li>
                  <li class="account__item">
                    <a class="account__item-link" href="{{ password }}">
                      <svg xmlns="http://www.w3.org/2000/svg" class="account__icon account__password-icon">
                        <use xlink:href="/img/icon/sprite.svg#AccountPasswordIcon"></use>
                      </svg>
                      {{ text_password }}
                    </a>
                  </li>
                </ul>
              </div>

              <div class="account__wrapper">
                {% if orders %}
                <div class="">
                  <table class="table table__account">
                    <thead>
                    <tr>
                      <td class="account__content-title">{{ column_order_id }}</td>
                      <td class="account__content-title">{{ column_customer }}</td>
                      <td class="account__content-title">{{ column_product }}</td>
                      <td class="account__content-title">{{ column_status }}</td>
                      <td class="account__content-title">{{ column_total }}</td>
                      <td class="account__content-title">{{ column_date_added }}</td>
                    </tr>
                    </thead>

                    <tbody class="account__content-items">
                    {% for order in orders %}

                      <tr>
                        <td class="account__content-text" aria-label="{{ column_order_id }}">{{ order.order_id }}</td>
                        <td class="account__content-text account__content-name" aria-label="{{ column_customer }}">{{ order.name }}</td>
                        <td class="account__content-text" aria-label="{{ column_product }}" style="text-align: center;">{{ order.products }}</td>
                        <td class="account__content-text" aria-label="{{ column_status }}">{{ order.status }}</td>
                        <td class="account__content-text" aria-label="{{ column_total }}">{{ order.total }}</td>
                        <td class="account__content-text" aria-label="{{ column_date_added }}">{{ order.date_added }}</td>
                        <td class="account__content-text account__content-link">
                          <a href="{{ order.view }}" data-toggle="tooltip" title="{{ button_view_text }}" class="">
                            <svg xmlns="http://www.w3.org/2000/svg" class="account__order-prev-icon">
                              <use xlink:href="/img/icon/sprite.svg#AccountShowOrder"></use>
                            </svg>
                          </a>
                        </td>
                      </tr>

                    {% endfor %}
                    </tbody>

                  </table>
                </div>
              </div>

            </section>
          {% else %}
            <p>{{ text_empty }}</p>
            {% endif %}
          </div>
        </div>

      </div>
    </div>

    <div class="content__footer">
      {{ footer }}
    </div>

  </div>

</div>

