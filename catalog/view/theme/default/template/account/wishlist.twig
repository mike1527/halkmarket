{{ header }}

<script src="catalog/view/javascript/jquery/jquery-3.5.1.min.js" type="text/javascript"></script>

<link href="catalog/view/javascript/bootstrap/css/bootstrap.min.css" rel="stylesheet" media="screen" />
<link href="catalog/view/javascript/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css" />
<link href="catalog/view/theme/default/stylesheet/global.css" rel="stylesheet">
<link href="catalog/view/theme/default/stylesheet/fonts.css" rel="stylesheet">
{% for link in links %}
  <link href="{{ link.href }}" rel="{{ link.rel }}" />
{% endfor %}
{% for analytic in analytics %}
  {{ analytic }}
{% endfor %}
{% for script in scripts %}
  <script src="{{ script }}" type="text/javascript"></script>
{% endfor %}
<script src="catalog/view/javascript/bootstrap/js/bootstrap.min.js" type="text/javascript"></script>
{% for script in scripts %}
  <script src="{{ script }}" type="text/javascript"></script>
{% endfor %}
<script src="catalog/view/javascript/common.js" type="text/javascript"></script>

<div id="account-wishlist" class="container">
  <ul class="breadcrumb breadcrumb__list">
    {% for key, breadcrumb in breadcrumbs %}
      {% if key + 1 < breadcrumbs|length %}
        <li class="breadcrumb__item breadcrumb__item-hover"><a class="breadcrumb__link" href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
      {% else %}
        <li class="breadcrumb__item">{{ breadcrumb.text }}</li>
      {% endif %}
    {% endfor %}
  </ul>
  {% if success %}
  <div class="alert alert-success alert-dismissible"><i class="fa fa-check-circle"></i> {{ success }}
    <button type="button" class="close" data-dismiss="alert">&times;</button>
  </div>
  {% endif %}
  <div class="row">{{ column_left }}
    {% if column_left and column_right %}
    {% set class = 'col-sm-6' %}
    {% elseif column_left or column_right %}
    {% set class = 'col-sm-9' %}
    {% else %}
    {% set class = 'col-sm-12' %}
    {% endif %}
    <div id="content" class="">{{ content_top }}

      <div class="category__items search__items-box">
        {% for product in products %}
          <div class="product-layout product-list col-xs-12 search__item search__item-wrapper">
            <div class="product-thumb">

              <div class="image category__item-img">
                <a href="{{ product.href }}">
                  <img src="{{ product.thumb }}" alt="{{ product.name }}" title="{{ product.name }}" class="img-responsive" />
                </a>
              </div>

              <div class="category__item-star">
                <div class="rating home__rating">
                  {% for i in 1..5 %}
                    {% if rating < i %}
                      <span class="fa fa-stack"><i class="fa fa-star-o fa-stack-1x"></i></span>
                    {% else %}
                      <span class="fa fa-stack">
                                              <i class="fa fa-star fa-stack-1x"></i>
                                              <i class="fa fa-star-o fa-stack-1x"></i>
                                            </span>
                    {% endif %}
                  {% endfor %}
                  <a class="rating__rew-num-link" href="#" onclick="$('a[href=\'#tab-review\']').trigger('click'); return false;">{{ reviews }}13</a>
                </div>
              </div>

              <div class="category__item-title">
                <h4>
                  <a class="category__item-title-text" href="{{ product.href }}">{{ product.name }}</a>
                </h4>
              </div>

              <div class="category__item-box favorit__item-box">

                <div class="price category__item-box-price">
                  <span class="category__item-box-text">цена за шт</span>
                  {% if product.price %}
                     <p class="price">
                    {% if not product.special %}
                      {{ product.price }}
                    {% else %}
                      <span class="price-old category__item-box-old">{{ product.price }}</span>
                      <span class="price-new category__item-box-new">{{ product.special }}</span>
                    {% endif %}
                    {% if product.tax %}
                      <span class="price-tax">{{ text_tax }} {{ product.tax }}</span>
                    {% endif %}
                     </p>
                  {% endif %}
                </div>

                <div class="category__item-cart-box">
                  <button class="cart__add-btn category-cart__add" type="button" onclick="cart.add('{{ product.product_id }}');">
                    <i class="fa fa-shopping-cart-black"></i>
                  </button>
                  <div class="category__cart-descr-quality">
                    <button id="minus-btn" class="category-cart__btn category-cart__minus-btn" type="button" name="button"></button>
                    <input id="inputcart" type="text" name="quantity[{{ product.cart_id }}]" value="{{ product.quantity }}1 шт" size="1" class="form-control category-cart__quantity" />
                    <button id="plus-btn" class="category-cart__btn category-cart__plus-btn" type="button" name="button"></button>
                    <span class="input-group-btn"></span>
                  </div>
                </div>

              </div>

              <div class="favorit__box favorit__box-view">
                <button class="favorit__box-btn">
                  <span class="favorit__style"></span>
                  <i class="fa fa-heart__favorite-page"></i>
                </button>
              </div>

            </div>
          </div>
        {% endfor %}
      </div>


      {{ content_bottom }}</div>
  </div>
</div>
{{ footer }}