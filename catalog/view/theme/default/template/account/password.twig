<div class="content__inner">
  <div class="content__inner-box">
    <div class="content__body">

      {{ header }}

      <script src="catalog/view/javascript/jquery/jquery-3.5.1.min.js" type="text/javascript"></script>
      <link href="catalog/view/javascript/bootstrap/css/bootstrap.min.css" rel="stylesheet" media="screen" />
      <link href="catalog/view/javascript/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css" />
      <link href="catalog/view/theme/default/stylesheet/global.css" rel="stylesheet">
      <link href="catalog/view/theme/default/stylesheet/fonts.css" rel="stylesheet">
      <script src="catalog/view/javascript/common.js" type="text/javascript"></script>


      <div id="account-password" class="container">
        <ul class="breadcrumb breadcrumb__list">
        {% for key, breadcrumb in breadcrumbs %}
            {% if key + 1 < breadcrumbs|length %}
                <li class="breadcrumb__item breadcrumb__item-hover"><a class="breadcrumb__link" href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
            {% else %}
                <li class="breadcrumb__item">{{ text_breadcrumb_password }}</li>
            {% endif %}
        {% endfor %}
        </ul>
        <div class="row">{{ column_left }}
        {% if column_left and column_right %}
        {% set class = 'col-sm-6' %}
        {% elseif column_left or column_right %}
        {% set class = 'col-sm-9' %}
        {% else %}
        {% set class = 'col-sm-12' %}
        {% endif %}
          <div id="content" class="{{ class }}">{{ content_top }}
            <section class="account">

              <div class="account__aside">
                <ul class="account__list">
                  <li class="account__item">
                    <a class="account__item-link" href="{{ order }}">
                      <svg xmlns="http://www.w3.org/2000/svg" class="account__icon account__order-icon">
                        <use xlink:href="/img/icon/sprite.svg#AccountOrderIcon"></use>
                      </svg>
                      {{ text_my_orders }}
                    </a>
                  </li>
                  <li class="account__item">
                    <a class="account__item-link" href="{{ address }}">
                      <svg xmlns="http://www.w3.org/2000/svg" class="account__icon account__address-icon">
                        <use xlink:href="/img/icon/sprite.svg#AccountAddressIcon"></use>
                      </svg>
                      {{ text_address_title }}
                    </a>
                  </li>
                  <li class="account__item">
                    <a class="account__item-link" href="{{ edit }}">
                      <svg xmlns="http://www.w3.org/2000/svg" class="account__icon account__profil-icon">
                        <use xlink:href="/img/icon/sprite.svg#AccountProfilIcon"></use>
                      </svg>
                      {{ text_edit }}
                    </a>
                  </li>
                  <li class="account__item">
                    <a class="account__item-link account__password-link" href="{{ password }}">
                      <svg xmlns="http://www.w3.org/2000/svg" class="account__password-link-icon">
                        <use xlink:href="/img/icon/sprite.svg#AccountPasswordIcon"></use>
                      </svg>
                      {{ text_password }}
                    </a>
                  </li>
                </ul>
              </div>

              <div class="account__address-wrapper">
                <form action="{{ action }}" method="post" enctype="multipart/form-data" class="form-horizontal password__form">
                  <fieldset>
                    <div class="form-group required">
                      <label class="address__form-title" for="input-password">{{ entry_password }}</label>
                      <div class="address__input-box">
                        <svg xmlns="http://www.w3.org/2000/svg" class="address__pass-icon address__icons">
                          <use xlink:href="/img/icon/sprite.svg#PasswordKey"></use>
                        </svg>
                        <input type="password" name="password" value="{{ password }}" placeholder="{{ entry_password_placeholder }}" id="input-password-new" class="form-control" />
                        <div class="label__acc-pass-box">
                          <label>
                            <input class="input__show-pas" onclick="showPassNew()" type="checkbox">
                            <span>
                              <svg xmlns="http://www.w3.org/2000/svg" class="address__showpass-icon">
                                <use xlink:href="/img/icon/sprite.svg#ShowPassIcon"></use>
                              </svg>
                            </span>
                          </label>
                        </div>
                        {% if error_password %}
                          <div class="text-danger">{{ error_password }}</div>
                        {% endif %}
                      </div>
                    </div>
                    <div class="form-group required">
                      <label class="address__form-title" for="input-confirm">{{ entry_confirm }}</label>
                      <div class="address__input-box">
                        <svg xmlns="http://www.w3.org/2000/svg" class="address__pass-icon address__icons">
                          <use xlink:href="/img/icon/sprite.svg#PasswordKey"></use>
                        </svg>
                        <input type="password" name="confirm" value="{{ confirm }}" placeholder="{{ entry_confirm }}" id="input-confirm" class="form-control" />
                        <div class="label__acc-pass-box">
                          <label>
                            <input class="input__show-pas" onclick="showPassConfirm()" type="checkbox">
                            <span>
                              <svg xmlns="http://www.w3.org/2000/svg" class="address__showpass-icon">
                                <use xlink:href="/img/icon/sprite.svg#ShowPassIcon"></use>
                              </svg>
                            </span>
                          </label>
                        </div>
                        {% if error_confirm %}
                          <div class="text-danger">{{ error_confirm }}</div>
                        {% endif %}
                      </div>
                    </div>
                  </fieldset>
                  <div class="buttons clearfix">
                    <div class="address__continue-btn">
                      <input type="submit" value="{{ password_button_continue }}" class="btn btn-primary" />
                    </div>
                  </div>
                </form>
              </div>

            </section>

          </div>
        </div>
      </div>

    </div>
    <div class="content__footer">
      {{ footer }}
    </div>
  </div>
</div>

<script>
  function showPassNew() {
    let x = document.getElementById("input-password-new");
    if (x.type === "password") {
      x.type = "text";
    } else {
      x.type = "password";
    }
  }
</script>

<script>
  function showPassConfirm() {
    let x = document.getElementById("input-confirm");
    if (x.type === "password") {
      x.type = "text";
    } else {
      x.type = "password";
    }
  }
</script>