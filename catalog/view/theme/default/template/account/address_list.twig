<div class="content__inner">
    <div class="content__inner-box">
        <div class="content__body">
            {{ header }}
            <script src="catalog/view/javascript/jquery/jquery-3.5.1.min.js" type="text/javascript"></script>
            <link href="catalog/view/javascript/bootstrap/css/bootstrap.min.css" rel="stylesheet" media="screen" />
            <link href="catalog/view/javascript/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css" />
            <link href="catalog/view/theme/default/stylesheet/global.css" rel="stylesheet">
            <link href="catalog/view/theme/default/stylesheet/fonts.css" rel="stylesheet">
            <script src="catalog/view/javascript/common.js" type="text/javascript"></script>
            <link href="catalog/view/javascript/slick/slick.css" rel="stylesheet" type="text/css">

            <div id="account-address" class="container">
                <ul class="breadcrumb breadcrumb__list">
                    {% for key, breadcrumb in breadcrumbs %}
                        {% if key + 1 < breadcrumbs|length %}
                            <li class="breadcrumb__item breadcrumb__item-hover"><a class="breadcrumb__link" href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
                        {% else %}
                            <li class="breadcrumb__item">{{ text_breadcrumb_address }}</li>
                        {% endif %}
                    {% endfor %}
                </ul>
                {% if success %}
                <div class="alert alert-success alert-dismissible"><i class="fa fa-check-circle"></i> {{ success }}</div>
                {% endif %}
                {% if error_warning %}
                <div class="alert alert-warning"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}</div>
                {% endif %}
                <div class="row">{{ column_left }}
                {% if column_left and column_right %}
                {% set class = 'col-sm-6' %}
                {% elseif column_left or column_right %}
                {% set class = 'col-sm-9' %}
                {% else %}
                {% set class = 'col-sm-12' %}
                {% endif %}


                    <div id="content" class="{{ class }}">
                        <h2 class="account__title">{{ text_address_book }}</h2>

                        <section class="account">
                            <div class="account__aside">
                                <ul class="account__list">
                                    <li class="account__item">
                                        <a class="account__item-link" href="{{ order }}">
                                            <svg xmlns="http://www.w3.org/2000/svg" class="account__icon account__order-icon">
                                                <use xlink:href="/img/icon/sprite.svg#AccountOrderIcon"></use>
                                            </svg>
                                            {{ text_my_orders }}
                                        </a>
                                    </li>
                                    <li class="account__item">
                                        <a class="account__item-link account__address-link" href="{{ address }}">
                                            <svg xmlns="http://www.w3.org/2000/svg" class="account__address-link-icon">
                                                <use xlink:href="/img/icon/sprite.svg#AccountAddressIcon"></use>
                                            </svg>
                                            {{ text_address }}
                                        </a>
                                    </li>
                                    <li class="account__item">
                                        <a class="account__item-link" href="{{ edit }}">
                                            <svg xmlns="http://www.w3.org/2000/svg" class="account__icon account__profil-icon">
                                                <use xlink:href="/img/icon/sprite.svg#AccountProfilIcon"></use>
                                            </svg>
                                            {{ text_edit }}
                                        </a>
                                    </li>
                                    <li class="account__item">
                                        <a class="account__item-link" href="{{ password }}">
                                            <svg xmlns="http://www.w3.org/2000/svg" class="account__icon account__password-icon">
                                                <use xlink:href="/img/icon/sprite.svg#AccountPasswordIcon"></use>
                                            </svg>
                                            {{ text_password }}
                                        </a>
                                    </li>
                                </ul>
                            </div>
                            <div class="account__address-wrapper">
                                <div class="account__address-box">
                                    <div class="account__address-inner">
                                        {% if addresses %}
                                        {% for result in addresses %}
                                            <div class="account__address-item">
                                                <span class="address__main-label">{{ text_main_label }}</span>
                                                <div class="account__address-btn-group">
                                                    <a href="{{ result.delete }}" class="account__address-edit-link">
                                                        <svg xmlns="http://www.w3.org/2000/svg" class="account__address-delete">
                                                            <use xlink:href="/img/icon/sprite.svg#AccountDelete"></use>
                                                        </svg>
                                                    </a>
                                                    <a href="{{ result.update }}" class="account__address-edit-link">
                                                        <svg xmlns="http://www.w3.org/2000/svg" class="account__address-edit">
                                                            <use xlink:href="/img/icon/sprite.svg#AccountEdit"></use>
                                                        </svg>
                                                    </a>
                                                </div>

                                                {{ result.address }}

                                                <div class="address__choise">
                                                    <label class="label__keep register__label-keep">
                                                        <input id="paymentMetodCash" class="input__keep login__input-keep" type="radio" name="agree" value="1">
                                                        <span class="login-input__keep-style"></span>
                                                        <p class="input__existing-text input__account-text">{{ text_choise_address }}</p>
                                                    </label>
                                                </div>

                                            </div>
                                        {% endfor %}
                                    </div>

                                    <div class="address__link-box">
                                        <a href="{{ add }}" class="btn btn-primary address__link-add-new">{{ text_btn_new_address }}</a>
                                    </div>

                                    {% else %}
                                        <p>{{ text_empty }}</p>
                                    {% endif %}
                                </div>
                            </div>
                        </section>

                    </div>
                </div>
            </div>

        </div>
        <div class="content__footer">
            {{ footer }}
        </div>
    </div>
</div>

<script src="catalog/view/javascript/slick/slick.min.js" type="text/javascript"></script>

<script>
    $(document).ready(function(){
        $('.account__address-inner').slick({
            infinite: true,
            // slidesToShow: 3,
            swipeToSlide: true,
            touchThreshold: 10,
            slidesToScroll: 1,
            nextArrow: '<div class="slick__address-arrow"><svg xmlns="http://www.w3.org/2000/svg" class="account__slider-next">\n' +
                '                                                <use xlink:href="/img/icon/sprite.svg#NextArrow"></use>\n' +
                '                                            </svg></div>',
            responsive: [
                {
                    breakpoint: 2100,
                    settings: {
                        slidesToShow: 3,
                    }
                },
                {
                    breakpoint: 1156,
                    settings: {
                        slidesToShow: 2,
                    }
                },
                {
                    breakpoint: 902,
                    settings: {
                        slidesToShow: 3,
                    }
                },
                {
                    breakpoint: 750,
                    settings: {
                        slidesToShow: 2,
                    }
                },
                {
                    breakpoint: 507,
                    settings: {
                        slidesToShow: 1,
                    }
                }
            ]
        });
    });
</script>

