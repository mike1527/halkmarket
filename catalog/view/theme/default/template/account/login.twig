<section class="login">

  <div class="login__wrapper">

      <div class="login__content">
        <nav class="login__menu">
          <div class="login__menu-img">
            <a class="login__menu-img-link" href="/index.php?route=common/home">
              <img src="/image/halkmarket/login/logo-login.png" alt="">
            </a>
          </div>
          <div class="login__menu-link">
            <a class="login__menu-link-item" href="/index.php?route=common/home">Главная</a>
          </div>
        </nav>
        <div class="login__content-box">

            <div class="login__content-inner">

            <h4 class="login__form-title">Войти</h4>
            <form action="{{ action }}" method="post" enctype="multipart/form-data">
              <div class="form-group form-group__email">
                <label class="control-label" for="input-email">E-Mail</label>
                <input type="text" name="email" value="{{ email }}" placeholder="{{ entry_email }}" id="input-email" class="form-control form-control__login form-control__email" />
              </div>
              <div class="form-group form-group__pass">
                <label class="control-label" for="input-password">{{ entry_password }}</label>
                <input type="password" name="password" value="{{ password }}" placeholder="Введите пароль" id="input-password" class="form-control form-control__login form-control__pass" />
                <label>
                <input class="input__show-pas" onclick="showPass()" type="checkbox">
                <span class="input__show-pas-btn"></span>
                </label>
                 <!-- <a class="login__form-forgot-pass-link" href="{{ forgotten }}">{{ text_forgotten }}</a> -->
              </div>
              <div class="login__form-btn-box">
                <a class="btn btn-primary login__btn login__register-btn" href="http://halkmarket-first/index.php?route=account/register" >Регистрация</a>
                <input class="btn btn-primary login__btn login__entry-btn" type="submit" value="{{ button_login }}"/>                
              </div>
              <div class="login__form-forgot-box">              
              <label class="label__keep">
                <input class="input__keep" type="checkbox">
                <span class="input__keep-style"></span>Запомните меня
              </label>
                <a class="login__form-forgot-link login__form-forgot-item" href="http://halkmarket-first/index.php?route=account/forgotten">Забыли пароль?</a>                 
              </div>
                             
              {% if redirect %}
              <input type="hidden" name="redirect" value="{{ redirect }}" />
              {% endif %}
            </form>

            </div>

        </div>
        
      </div>
    
      <!-- <div class="swiper-container"> -->
        <div class="login__slider">

            <div class="login__slider-item">
              <a class="login__slider-item-link" href="#">
                <div class="login__slider-item-img" style="background-image: url('/image/halkmarket/login/1.jpg');"></div>
              </a>
            </div>

            <div class="login__slider-item">
              <a class="login__slider-item-link" href="#">
                <div class="login__slider-item-img" style="background-image: url('/image/halkmarket/login/2.jpg');"></div>
              </a>
            </div>

            <div class="login__slider-item">
              <a class="login__slider-item-link" href="#">
                <div class="login__slider-item-img" style="background-image: url('/image/halkmarket/login/3.jpg');"></div>
              </a>
            </div>

            <div class="login__slider-item">
              <a class="login__slider-item-link" href="#">
                <div class="login__slider-item-img" style="background-image: url('/image/halkmarket/login/4.jpg');"></div>
              </a>
            </div>

        </div>     
      <!-- </div>    -->

  </div>
</section>

<script>
  function showPass() {
      var x = document.getElementById("input-password");
      if (x.type === "password") {
          x.type = "text";
      } else {
          x.type = "password";
      }
  }
</script>

<script>
  $(document).ready(function(){
  $('.login__slider').slick({
    infinite: true,
    speed: 1000,
    fade: true,
    cssEase: 'linear',
    arrows: false,
    dots: true
  });
});
</script>
