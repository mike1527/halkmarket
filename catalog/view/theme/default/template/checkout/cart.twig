<script>

  let wrapper = document.querySelector('wr');
  let countInput = document.getElementsByClassName('.cart__quantity');
  let butM = document.getElementsByClassName('.cart__minus-btn');
  let butP = document.getElementsByClassName('.cart__plus-btn');
  let units = countInput.value.replace(/\d/g, '');
  butP.onclick = function(){
    countInput.value = parseInt(countInput.value)+1+units;
  };
  butM.onclick = function(){
    if(parseInt(countInput.value) > 1) {
      countInput.value = parseInt(countInput.value)-1+units;
    }
  };
  console.log(countInput);

</script>



