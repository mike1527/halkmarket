<div id="product-product">
    <div class="container__page">
        <ul class="breadcrumb breadcrumb__list">
            {% for key, breadcrumb in breadcrumbs %}
                {% if key + 1 < breadcrumbs|length %}
                    <li class="breadcrumb__item breadcrumb__item-hover"><a class="breadcrumb__link" href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
                {% else %}
                    <li class="breadcrumb__item">{{ breadcrumb.text }}</li>
                {% endif %}
            {% endfor %}
        </ul>
    </div>

  <div class="row container__page">{{ column_left }}
    {% if column_left and column_right %}
    {% set class = 'col-sm-6' %}
    {% elseif column_left or column_right %}
    {% set class = 'col-sm-9' %}
    {% else %}
    {% set class = 'col-sm-12' %}
    {% endif %}
    <div id="content" class="{{ class }}">{{ content_top }}
      <div class="row"> {% if column_left or column_right %}
        {% set class = 'col-sm-6' %}
        {% else %}
        {% set class = 'col-sm-8' %}
        {% endif %}

		<div class="product__inner">

			<div class="product__inner-line-box">
				<div class="product__img-box">
					<div class="{{ class }}"> {% if thumb or images %}
							<ul class="thumbnails">
								{% if thumb %}
									<li class="thumbnails__item">
										<a class="thumbnail product__thumbnail" href="{{ popup }}" title="{{ heading_title }}">
											<img class="product__img-thumbnails" src="{{ thumb }}" title="{{ heading_title }}" alt="{{ heading_title }}" />
										</a>
									</li>
									<a class="product__thumbnail-link" href="{{ popup }}"></a>
								{% endif %}
								<div class="product__img-box-wrapper">
									{% if images %}
										{% for image in images %}
											<li class="image-additional product__thumbnail-item">
												<a class="thumbnail product__thumbnail-more" href="{{ image.popup }}" title="{{ heading_title }}">
													<img src="{{ image.thumb }}" title="{{ heading_title }}" alt="{{ heading_title }}" />
												</a>
											</li>
										{% endfor %}
									{% endif %}
								</div>

							</ul>
						{% endif %}
					</div>
				</div>

				<div class="product__exposition-box">

					<div class="product__exposition-box-wrapper">
						<div class="rating home__rating product__rating">
							{% for i in 1..5 %}
								{% if rating < i %}
									<span class="fa fa-stack"><i class="fa fa-star-o-product fa-stack-1x"></i></span>
								{% else %}
									<span class="fa fa-stack"><i class="fa fa-star-product fa-stack-1x"></i><i class="fa fa-star-o-product fa-stack-1x"></i></span>
								{% endif %}
							{% endfor %}

						</div>
						<div class="{{ class }} product__description-title">
							<h1 class="product__exposition-box-title">{{ heading_title }}</h1>

							<span class="special__item-box-text special__item-box-text">{{ text_prise_for_one }}</span>
							<div class="price bestsellers__item-box-price">
								{% if not product.special %}
									{{ product.price }}
								{% else %}
									<span class="price-old bestsellers__item-box-old">{{ product.price }}</span>
									<span class="price-new bestsellers__item-box-new">{{ product.special }}</span>
								{% endif %}
							</div>

							{% if price %}
								<ul class="list-unstyled">
									{% if not special %}
										<li>
											<h2 {{ price }}</h2>
										</li>
									{% else %}
										<li><span class="product__old-price" style="text-decoration: line-through;">{{ price }}</span></li>
										<li>
											<h2 class="product__price">{{ special }}</h2>
										</li>
									{% endif %}
								</ul>
							{% endif %}
							<div id="product"> {% if options %}
								{% endif %}
								{% if recurrings %}
									<h3>{{ text_payment_recurring }}</h3>
									<div class="form-group required">
										<select name="recurring_id" class="form-control">
											<option value="">{{ text_select }}</option>
											{% for recurring in recurrings %}
												<option value="{{ recurring.recurring_id }}">{{ recurring.name }}</option>
											{% endfor %}
										</select>
										<div class="help-block" id="recurring-description"></div>
									</div>
								{% endif %}

								<div class="product__button-group">
									<div class="product__button-group-inner">
										<div class="favorit__box favorit__product-box">
											<button class="favorit__box-btn favorit__product-box-btn" type="button" data-toggle="tooltip" title="{{ button_wishlist }}" onclick="wishlist.add('{{ product.product_id }}');">
												<i class="fa fa-heart"></i>
											</button>
										</div>
										<div class="product__viewed-box">
											<span class="product__viewed-box-num">123</span>
										</div>
									</div>
									<div class="form-group product__add-cart">
										<label class="control-label" for="input-quantity" style="display: none">{{ entry_qty }}</label>
										<input type="text" name="quantity" value="{{ minimum }}" style="display: none" size="2" id="input-quantity" class="form-control" />
										<input type="hidden" name="product_id" style="display: none" value="{{ product_id }}" />
										<button type="button" id="button-cart" data-loading-text="{{ text_loading }}" class="product__cart-btn"></button>
									</div>
								</div>

								<div class="product__articul">
									<ul class="list-unstyled">
										<li class="product__articul-text">{{ text_model }} {{ model }}</li>
									</ul>
								</div>



								{% if minimum > 1 %}
									<div class="alert alert-info"><i class="fa fa-info-circle"></i> {{ text_minimum }}</div>
								{% endif %}</div>
						</div>
					</div>

				</div>
			</div>

